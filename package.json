{
  "name": "lumin-time",
  "version": "0.1.18",
  "private": true,
  "description": "A privacy-first browser extension that automatically tracks your online activity.",
  "homepage": "https://github.com/nuttycc/LuminTime",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "build": "wxt build",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "mkdir -p node_modules/.cache/vue-tsc && vue-tsc --noEmit -p tsconfig.typecheck.json",
    "lint": "oxlint --type-aware .",
    "format": "oxfmt",
    "test": "vitest run",
    "postinstall": "wxt prepare"
  },
  "dependencies": {
    "@tanstack/pacer": "^0.19.0",
    "@vueuse/core": "^14.2.1",
    "arktype": "^2.1.29",
    "dexie": "^4.3.0",
    "es-toolkit": "^1.44.0",
    "motion-v": "^2.0.0-beta.4",
    "pretty-ms": "^9.3.0",
    "tldts": "^7.0.23",
    "vue": "^3.5.28",
    "vue-router": "^5.0.3"
  },
  "devDependencies": {
    "@iconify/vue": "^5.0.0",
    "@tailwindcss/vite": "^4.2.0",
    "@wxt-dev/auto-icons": "^1.1.0",
    "@wxt-dev/module-vue": "^1.0.3",
    "daisyui": "^5.5.18",
    "oxfmt": "^0.34.0",
    "oxlint": "^1.49.0",
    "oxlint-tsgolint": "^0.14.1",
    "tailwindcss": "^4.2.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "vue-tsc": "^3.2.4",
    "wxt": "^0.20.17"
  },
  "overrides": {
    "vite": "^8.0.0-beta.14"
  },
  "trustedDependencies": [
    "esbuild",
    "sharp",
    "spawn-sync"
  ]
}
